{
  "extends": "tslint-config-prettier",
  "rules": {
    "quotemark": [true, "single", "jsx-double", "avoid-escape"],
    "semicolon": [true, "always", "ignore-interfaces"],
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never",
        "esSpecCompliant": true
      }
    ],
    "space-before-function-paren": [true, "never"]
  }
}
